<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_linkPreview"
    android:layout_margin="@dimen/_4sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_linkdata"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/cv_image"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvLinkTitle"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:textStyle="bold"
                android:textSize="@dimen/_16sdp"
                android:layout_margin="@dimen/_4sdp"
                android:ellipsize="end"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvLinkDesc"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_gravity="center"
                android:textSize="@dimen/_15sdp"
                android:layout_margin="@dimen/_4sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvLinkUrl"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:maxLines="1"
                android:layout_margin="@dimen/_4sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_image"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/_4sdp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivLink"
                android:scaleType="fitXY"
                android:layout_width="@dimen/iv_height_width"
                android:layout_height="@dimen/iv_height_width" />
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</android.support.v7.widget.CardView>
