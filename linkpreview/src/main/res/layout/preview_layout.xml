<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_linkPreview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/cv_image"
            android:layout_margin="@dimen/_4sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivLink"
                android:scaleType="fitXY"
                android:layout_width="@dimen/iv_height_width"
                android:layout_height="@dimen/iv_height_width" />
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:id="@+id/ll_linkdata"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvLinkTitle"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvLinkDesc"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvLinkUrl"
                android:textSize="@dimen/_6sdp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
